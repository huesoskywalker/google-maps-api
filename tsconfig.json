{
    "compilerOptions": {
        "target": "ES6",
        "lib": ["DOM", "DOM.Iterable", "ESNext", "ES6"],
        "types": ["node", "next", "cypress", "cypress-plugin-api"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "src/lib/populate-db.ts"
    ],
    "exclude": ["node_modules"]
}
